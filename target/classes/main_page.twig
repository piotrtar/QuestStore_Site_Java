<!DOCTYPE html>
<html lang="en">
    <head>
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <script type="text/javascript"></script>
            <script>
                 function showLogin() { 
                    var loginForm = document.getElementById('hidden');
                    var background = document.getElementById('header');
                    var displaySetting = loginForm.style.display;
                    var loginButton = document.getElementById('LoginButton');



                    if (displaySetting == 'block') {
                
                    loginForm.style.display = 'none';
                    document.getElementById('TellMeMoreButton').style.pointerEvents = 'auto';
                    document.getElementById('SignInButton').style.pointerEvents = 'auto';
                    document.getElementById('LoginButton').style.pointerEvents = 'auto';
                    background.style.opacity = 1;
                    
                    }
                    else { 

                    document.getElementById('TellMeMoreButton').style.pointerEvents = 'none';
                    document.getElementById('SignInButton').style.pointerEvents = 'none';
                    document.getElementById('LoginButton').style.pointerEvents = 'none';
                    loginForm.style.display = 'block';

                    background.style.opacity = 0.4;

                    }
                }
                </script>
        <title>
            Welcome in CoolCoin
        </title>
        <meta charset="utf-8">
        <link rel="stylesheet" type="text/css" href="static/css/main_page.css">

    </head>

    <body>
     <header id='header'>
         <div class="container" id="main_page">
             <div class="heading clearfix">
                <img src="static/img/logo.png" class="logo">
                <nav id="menu">
                    <ul class="menu">
                        <li><a href="signUp" id='SignInButton'>Sign Up</a></li>
                        <li><a href="javascript:showLogin();" id="LoginButton">Log In</a>
                        
                    </ul>
                </nav>
            </div>
            <div class="titles">
                <div class="titles-first">
                    <p>
                        Welcome To CoolCoin System!
                    </p>
                </div>
                <h1>
                    It's Nice To See You
                </h1>
            </div>
            <a class="button" href='https://codecool.pl/' target="_blank" id="TellMeMoreButton">Tell Me More</a>
         </div>
     </header>

     
        <div class="hidden" id="hidden">
            <div class="login">
            <h1>Login to Coolcoin System</h1>
            <form method="POST" >
                <p><input type="text" name="login" value="PIOTR" placeholder="Username or Email"></p>
                <p><input type="password" name="password" value="TARCZON" placeholder="Password"></p>
                <p class="remember_me">
                <label>
                    <input type="checkbox" name="remember_me" id="remember_me">
                    Remember me on this computer
                </label>
                </p>
                
                <p class="submit"><input type="submit" name="commit" value="Login"></p>



            </form>

                <button onclick="javascript:showLogin();">X</button>

            <div class="login-help">
            <p>Forgot your password? <a href="index.html">Click here to reset it</a>.</p>
                {% if (failed_login) %}
                <p id="incorrect">Incorrect password, try again</p>
                {% endif %}
                {% if (session_over) %}
                                <p id="session_over"> You were away so long, please login again</p>
                                {% endif %}

            </div>
      </div>

        <footer>   
            <div id="footer_page">
                <span>&copy; 2017</span>
                <a href="#main_page">Main Page</a>
                <span class="authors">Valentyn Potapov, Piotr Tarczon</span>
            </div>
        </footer>

        {% if (failed_login) %}

         <script type="text/javascript">
         showLogin();
        </script>

         {% endif %}

         {% if (session_over) %}
                  <script type="text/javascript">
                  showLogin();


         </script>
         {% endif %}


    </body>
</html>